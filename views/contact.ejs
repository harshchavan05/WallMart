<%- include("partials/header") -%>

    <section class="my-5">
        <div class="py-5 my-3">
            <h2 class="text-center mt-4 p-5 text-white rounded title-text"> Contact Us </h2>
        </div>
        <div class="w-50 m-auto">
            <form action="/contact" method="post">
                <div class="form-group my-4">
                    <label> <h4>USERNAME</h4> </label>
                    <input type="text" name="username" placeholder="Name" autocomplete="off" class="form-control">
                </div>
                <div class="form-group my-4">
                    <label> <h4>EMAIL ID</h4> </label>
                    <input type="text" name="email_id" placeholder="E-mail" autocomplete="off" class="form-control">
                </div>
                <div class="form-group my-4">
                    <label> <h4>MOBILE</h4> </label>
                    <input type="text" name="mobile" placeholder="Mobile" autocomplete="off" class="form-control">
                </div>
                <label><h4>COMMENTS</h4></label>
                <textarea class="form-control" placeholder="comments" name="comments">
        </textarea>

                <button type="submit" class="btn btn-success my-4 rounded-pill " name="submit" value="submit"> <h3>Submit</h3>
                </button>
            </form>
        </div>
    </section>








